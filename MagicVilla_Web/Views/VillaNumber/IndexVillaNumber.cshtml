@model IEnumerable<MagicVilla_Web.Models.Dto.VillaNumberDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <h1 class="text-primary"> Lista Numero de Villas</h1>
    </div>
    <div class="col text-end pt-1">
        <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Crear numero de villa</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre Villa</th>
                <th>Numero Villa</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Villa.Nombre</td>
                    <td>@item.VillaNo</td>
                    <td>
                        <a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" class="btn btn-warning" asp-route-villaNo="@item.VillaNo"><i class="bi bi-pencil-square"></i></a>
@*                        <a asp-controller="VillaNumber" asp-action="DeleteVillaNumber" class="btn btn-danger" asp-route-villaNo="@item.VillaNo"><i class="bi bi-trash-fill"></i></a>*@
                        <form asp-controller="VillaNumber" asp-action="DeleteVillaNumber" method="post" class="btn btn-danger" asp-route-villaNo="@item.VillaNo" onclick="return DeleteVillaNumber(this)"><i class="bi bi-trash-fill"></i></form>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

@section Scripts{

    <script>
        function DeleteVillaNumber(e) {
            //e.preventDefault();
            Swal.fire({
                title: 'Eliminar Habitación',
                text: "¿Desea eliminar la Habitación?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Si, eliminar!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $("form").submit();
                }
            })
        }
    </script>
}

