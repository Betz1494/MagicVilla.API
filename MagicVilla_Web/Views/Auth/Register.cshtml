@model MagicVilla_Web.Models.Dto.RegisterationRequestDTO

<form method="post">
    <div class="container border p-4">
        <div class="row text-center">
            <h1>Registro</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Usuario" type="text" class="form-control" placeholder="Usuario..." />
            </div>

            <div class="col-6 offset-3 pb-2">
                <input asp-for="Nombre" type="text" class="form-control"  placeholder="Nombre..." />
            </div>

            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" type="text" class="form-control" placeholder="contraseña..." />
            </div>

            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="btn btn-success form-control" value="Submit">Registrarse</button>
            </div>

        </div>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
