@model IEnumerable<MagicVilla_Web.Models.Dto.VillaDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <h1 class="text-primary"> Lista de Villas</h1>
    </div>
    <div class="col text-end pt-1">
        <a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Crear villa</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Capacidad</th>
                <th>Precio</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Capacidad</td>
                    <td>@((item.Precio.ToString("c")))</td>
                    <td>
                        <a asp-controller="Villa" asp-action="UpdateVilla" class="btn btn-warning" asp-route-villaId="@item.Id"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Villa" asp-action="DeleteVilla" class="btn btn-danger"  asp-route-villaId="@item.Id"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

